include layouts/helpers/mixins
- var page = 'menu';

doctype html
html.no-js(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='description', content='Информация о нашем ресторане и его история')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title О ресторане
    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    // Place favicon.ico in the root directory

    // build:css styles/vendor.css
    // bower:css
    // endbower
    // endbuild

    // build:css styles/main.css
    link(rel='stylesheet', href='styles/'+page+'.css')
    // endbuild

    // build:js scripts/vendor/modernizr.js
    script(src='/bower_components/modernizr/modernizr.js')
    // endbuild
  body
    <!--[if lt IE 10]>
    p.browserupgrade You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
    <![endif]-->

    //- page wrapper, get modifier, by page name
    +page(page)
      include layouts/partials/header

      +hero-content("Наше меню", "http://placehold.it/350x150", [
        { url: "index.html",
          text: "Главная"},
        { url: "#",
          text: "Наше меню"}
      ])


      main.content


      include layouts/partials/footer


    include layouts/partials/analytics

    // build:js scripts/vendor.js
    // bower:js
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/modernizr/modernizr.js')
    // endbower
    // endbuild

    // build:js scripts/common.js
    script(src='scripts/common.js')
    // endbuild

