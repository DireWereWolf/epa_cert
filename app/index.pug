include layouts/helpers/mixins
- var page = 'main';

doctype html
html.no-js(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='description', content='Лучший ресторан вашего города!')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Ресторан
    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    // Place favicon.ico in the root directory

    // build:css styles/vendor.css
    // bower:css
    // endbower
    // endbuild

    |<link href="https://fonts.googleapis.com/css?family=Comfortaa:400,700|Ubuntu:400,500,500i&amp;subset=cyrillic" rel="stylesheet">
    // build:css styles/main.css
    link(rel='stylesheet', href='styles/'+page+'.css')
    // endbuild

    // build:js scripts/vendor/modernizr.js
    script(src='/bower_components/modernizr/modernizr.js')
    // endbuild
  body
    <!--[if lt IE 10]>
    p.browserupgrade You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
    <![endif]-->

    //- page wrapper, get modifier, by page name
    +page(page)
      include layouts/partials/header
      include layouts/partials/hero/hero_main


      main.content
        .content__wrapper.c-wrap

          section.benefits
            h2.benefits__title.f-title Наши преимущества
            .benefits__items
              figure.benefits__item.benefit
                +img("benefits/grapes-and-pear-on-a-platter.png",
                    {title: "Продукты", className:"benefit__img", width:"80", height:"80"})
                figcaption
                  span.benefit__title Продукты
                  span.benefit__desc Собственное фермерское хозяйство
              //-item end
              figure.benefits__item.benefit
                +img("benefits/chef-with-hat.png",
                {title: "Профессионализм", className: "benefit__img", width: "80", height: "80"})
                figcaption
                  span.benefit__title Профессионализм
                  span.benefit__desc Отзывчивый и высококвалифицированный персонал
              //-item end
              figure.benefits__item.benefit
                +img("benefits/food-on-a-stick.png",
                {title: "Кейтеринг", className: "benefit__img", width: "80", height: "80"})
                figcaption
                  span.benefit__title Кейтеринг
                  span.benefit__desc Профессиональная организация выездных мероприятий
              //-item end
              figure.benefits__item.benefit
                +img("benefits/glass-of-wine-and-bottle.png",
                {title: "Винная карта", className: "benefit__img", width: "80", height: "80"})
                figcaption
                  span.benefit__title Винная карта
                  span.benefit__desc Только лучшие напитки
          //- benefits end

          section.menu-categories.menu-categories_main
            h3.menu-categories__title.f-title Наше меню
            .menu-categories__items
              a.menu-categories__item.menu-category.menu-category_main(href="#")
                .menu-category__title.f-title Горячие блюда
                .menu-category__img(style="background: url('images/menu/cat_1.jpg') 50% 50% no-repeat")
              a.menu-categories__item.menu-category.menu-category_main(href="#")
                .menu-category__title.f-title Холодные закуски
                .menu-category__img(style="background: url('images/menu/cat_2.jpg') 50% 50% no-repeat")
              a.menu-categories__item.menu-category.menu-category_main(href="#")
                .menu-category__title.f-title Десерты
                .menu-category__img(style="background: url('images/menu/cat_3.jpg') 50% 50% no-repeat")
              a.menu-categories__item.menu-category.menu-category_main(href="#")
                .menu-category__title.f-title Напитки
                .menu-category__img(style="background: url('images/menu/cat_4.jpg') 50% 50% no-repeat")
          //- menu-categories

          section.events.events_last-events-main
            h3.events__title Cобытия
            .events__items
              .events__item.event
                +img("",
                {title: "event", className: "event__img", width: "80", height: "80"})
                .event__title Event title
                .event__desc
                  .event__date 11.11.11
                  .event__prev-text
                    | Lorem ipsum dolor sit amet
              .events__item
              .events__item
              .events__item
          //- events end



      include layouts/partials/footer

    include layouts/partials/analytics

    // build:js scripts/vendor.js
    // bower:js
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/modernizr/modernizr.js')
    // endbower
    // endbuild

    // build:js scripts/common.js
    script(src='scripts/common.js')
    // endbuild

    // build:js scripts/main.js
    script(src='scripts/'+page+'.js')
    // endbuild
